{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:StartInstances",
        "ec2:StopInstances"
      ],
      "Resource": "arn da instância",
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/Servidor": "Nome da instância"
        }
      }
    }
  ]
}
